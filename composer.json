{
    "name": "chrisjenkinson/dynamo-db-snapshotting-repository",
    "description": "Snapshotting functionality for Broadway using DynamoDB",
    "license": "GPL-3.0-or-later",
    "type": "library",
    "authors": [
        {
            "name": "Chris Jenkinson"
        }
    ],
    "require": {
        "php": "^8.2",
        "async-aws/dynamo-db": "^1.3.0 || ^3.0.0",
        "broadway/broadway": "^2.4.0",
        "broadway/snapshotting": "^0.3.0"
    },
    "require-dev": {
        "infection/infection": "0.31.9",
        "phpstan/phpstan": "2.1.30",
        "phpunit/phpunit": "9.5.0",
        "symplify/easy-coding-standard": "12.6.0"
    },
    "autoload": {
        "psr-4": {
            "chrisjenkinson\\DynamoDbSnapshottingRepository\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "chrisjenkinson\\DynamoDbSnapshottingRepository\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true
        }
    },
    "scripts": {
        "tests": [
            "@phpunit",
            "@infection",
            "@phpstan"
        ],
        "phpunit": [
            "phpunit"
        ],
        "infection": [
            "infection --threads=max"
        ],
        "phpstan": [
            "phpstan"
        ]
    }
}
